{
    "manifest_version": 2,
    "name": "Head Navigator",
    "description": "This extension allows a user to navigate any page, including zooming in and out, using their head.",
    "version": "1.0",
    "background": {
        "page": "background.html"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "videoCapture",
        "<all_urls>",
        "tabs"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}